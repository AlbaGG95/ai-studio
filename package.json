{
  "name": "ai-studio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --filter web build && pnpm --filter api build",
    "lint": "pnpm --filter web lint && pnpm --filter api lint",
    "typecheck": "pnpm --filter web exec tsc -p tsconfig.json --noEmit && pnpm --filter api exec tsc -p tsconfig.json --noEmit && pnpm --filter @ai-studio/core exec tsc -p tsconfig.json --noEmit",
    "typecheck:core": "pnpm --filter @ai-studio/core exec tsc -p tsconfig.core.json --noEmit",
    "validate": "pnpm --filter api exec tsx src/validation/cli.ts",
    "smoke": "pnpm --filter @ai-studio/core exec tsx runtime/smokeRunner.ts",
    "test:smoke": "node scripts/test-generate.mjs",
    "test:health": "node scripts/health-check.mjs",
    "gen:template": "node scripts/gen-template.mjs",
    "dev:reset": "node scripts/dev-reset.mjs"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
