{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "./index.ts",
    "./spec/**/*.ts",
    "./src/spec/**/*.ts",
    "./src/manifest/**/*.ts",
    "./engine/**/*.ts",
    "./afk/**/*.ts",
    "./runtime/**/*.ts",
    "./trivia/**/*.ts",
    "./runner/**/*.ts",
    "./tower/**/*.ts"
  ],
  "exclude": ["./node_modules", "./dist"]
}
