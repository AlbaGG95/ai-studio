{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Studio Game Specification v1",
  "description": "Schema for Idle RPG game generation",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "engine", "systems", "content", "ui", "balance"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "language"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Game name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version"
        },
        "language": {
          "type": "string",
          "enum": ["en", "es"],
          "description": "Game language"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Game description"
        },
        "seed": {
          "type": "integer",
          "minimum": 0,
          "description": "Deterministic RNG seed"
        }
      }
    },
    "engine": {
      "type": "object",
      "additionalProperties": false,
      "required": ["templateId"],
      "properties": {
        "templateId": {
          "type": "string",
          "description": "Base template identifier (optionally versioned)",
          "oneOf": [
            { "enum": ["idle-rpg-base"] },
            { "pattern": "^idle-rpg-base@\\d+\\.\\d+$" }
          ]
        }
      }
    },
    "systems": {
      "type": "object",
      "additionalProperties": false,
      "required": ["idleLoop", "combat", "progression", "inventory"],
      "properties": {
        "idleLoop": {
          "type": "object",
          "additionalProperties": false,
          "required": ["tickMs", "baseIncome"],
          "properties": {
            "tickMs": {
              "type": "integer",
              "minimum": 100,
              "maximum": 10000,
              "description": "Game tick interval in milliseconds"
            },
            "baseIncome": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 1000,
              "description": "Gold earned per tick"
            }
          }
        },
        "combat": {
          "type": "object",
          "additionalProperties": false,
          "required": ["auto", "damageFormula"],
          "properties": {
            "auto": {
              "type": "boolean",
              "description": "Enable auto-combat"
            },
            "damageFormula": {
              "type": "string",
              "enum": ["linear", "scaling", "exponential"],
              "description": "Damage calculation method"
            }
          }
        },
        "progression": {
          "type": "object",
          "additionalProperties": false,
          "required": ["levels", "scaling"],
          "properties": {
            "levels": {
              "type": "integer",
              "minimum": 10,
              "maximum": 200,
              "description": "Maximum player level"
            },
            "scaling": {
              "type": "string",
              "enum": ["linear", "quadratic", "exponential"],
              "description": "Level scaling growth"
            }
          }
        },
        "inventory": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable inventory system"
            },
            "maxSlots": {
              "type": "integer",
              "minimum": 5,
              "maximum": 200,
              "default": 20
            }
          }
        }
      }
    },
    "content": {
      "type": "object",
      "additionalProperties": false,
      "required": ["heroes", "enemies", "stages", "items"],
      "properties": {
        "heroes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name", "hp", "atk", "def"],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              },
              "description": {
                "type": "string",
                "maxLength": 200
              },
              "hp": {
                "type": "integer",
                "minimum": 1
              },
              "atk": {
                "type": "integer",
                "minimum": 1
              },
              "def": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        },
        "enemies": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name", "hp", "atk", "goldReward"],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              },
              "hp": {
                "type": "integer",
                "minimum": 1
              },
              "atk": {
                "type": "integer",
                "minimum": 1
              },
              "goldReward": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        },
        "stages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name", "level", "enemies"],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              },
              "level": {
                "type": "integer",
                "minimum": 1
              },
              "enemies": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "items": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name", "rarity"],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              },
              "rarity": {
                "type": "string",
                "enum": ["common", "rare", "epic", "legendary"]
              },
              "stats": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "atk": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "def": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "hp": {
                    "type": "integer",
                    "minimum": 0
                  }
                }
              }
            }
          }
        }
      }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "required": ["screens"],
      "properties": {
        "screens": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name"],
            "properties": {
              "id": {
                "type": "string",
                "enum": ["home", "battle", "inventory", "heroes"]
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          }
        }
      }
    },
    "balance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["goldPerSecond", "enemyHPScaling"],
      "properties": {
        "goldPerSecond": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 10000,
          "description": "Base gold generation rate"
        },
        "enemyHPScaling": {
          "type": "number",
          "minimum": 1,
          "maximum": 5,
          "description": "HP multiplier per stage level"
        }
      }
    }
  }
}
