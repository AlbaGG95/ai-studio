{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Studio Feature Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "module", "provides", "consumes", "files"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "module": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "kind", "entry", "templateId"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
          "description": "Module identifier (kebab-case)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "kind": {
          "type": "string",
          "enum": ["system", "renderer", "ui"]
        },
        "entry": {
          "type": "string",
          "minLength": 1
        },
        "templateId": {
          "type": "string",
          "enum": ["idle-rpg-base"]
        }
      }
    },
    "provides": {
      "$ref": "#/$defs/io"
    },
    "consumes": {
      "$ref": "#/$defs/io"
    },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/file"
      }
    },
    "assets": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/$defs/asset"
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "maxBundleKb": {
          "type": "integer",
          "minimum": 1
        },
        "maxTickMs": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  },
  "$defs": {
    "io": {
      "type": "object",
      "additionalProperties": false,
      "required": ["events", "state", "commands"],
      "properties": {
        "events": {
          "type": "array",
          "items": { "type": "string" }
        },
        "state": {
          "type": "array",
          "items": { "type": "string" }
        },
        "commands": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "file": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "role", "sha256"],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "role": {
          "type": "string",
          "enum": ["logic", "render", "ui", "asset"]
        },
        "sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        }
      }
    },
    "asset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "path", "sha256", "sizeBytes"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["image", "audio", "data"]
        },
        "path": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        },
        "sizeBytes": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
