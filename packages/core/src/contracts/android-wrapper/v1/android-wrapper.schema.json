{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Android Wrapper Spec v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "appId",
    "appName",
    "versionCode",
    "versionName",
    "orientation"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "enum": ["android-wrapper@1"]
    },
    "appId": {
      "type": "string",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_]*(\\.[a-zA-Z][a-zA-Z0-9_]*)+$"
    },
    "appName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "versionCode": {
      "type": "integer",
      "minimum": 1
    },
    "versionName": {
      "type": "string",
      "minLength": 1
    },
    "orientation": {
      "type": "string",
      "enum": ["portrait", "landscape"]
    },
    "minSdk": {
      "type": "integer",
      "minimum": 1,
      "default": 23
    },
    "targetSdk": {
      "type": "integer",
      "minimum": 1,
      "default": 34
    },
    "cleartextTraffic": {
      "type": "boolean",
      "default": false
    },
    "webviewDebug": {
      "type": "boolean",
      "default": false
    }
  }
}
