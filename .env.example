# AI Studio Environment Variables
# Copy this file to .env.local for local development

# Web App (runs on 3000)
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
# Legacy (optional): NEXT_PUBLIC_API_URL=http://localhost:4000

# API Server (runs on 4000)
API_PORT=4000
API_HOST=0.0.0.0
# LLM provider: none (offline fallback), ollama, or anthropic
LLM_PROVIDER=none
# Keep external LLMs disabled by default (offline mode)
ALLOW_LLM=false
ENABLE_EXTERNAL_LLM=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
ANTHROPIC_API_KEY=

# Node environment
NODE_ENV=development
